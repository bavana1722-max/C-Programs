#include <stdio.h>

// Function declaration
float calculateBill(int qty, float price);

int main() {
    int quantity;
    float price, total;

    printf("Enter quantity: ");
    scanf("%d", &quantity);

    printf("Enter price per item: ");
    scanf("%f", &price);

    // Function call
    total = calculateBill(quantity, price);

    printf("Total Bill Amount = %.2f", total);

    return 0;
}

// Function definition
float calculateBill(int qty, float price) {
    return qty * price;
}
